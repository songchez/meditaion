generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id           Int      @id @default(autoincrement())
  username     String
  email        String   @unique
  password     String
  createdAt    DateTime @default(now())
  countVerse   Int @default(0) //몇 절 읽었니?
  countChapter Int @default(0) //몇 장 읽었니?
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String
  content     String
  authorEmail String
  createdAt   DateTime @default(now())
  testaBook   String
  whereRead   String
}

model GlobalCount {
  id           Int      @id @default(1)
  countVerse   Int
  countChapter Int
}